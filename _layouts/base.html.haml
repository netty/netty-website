!!!5
%html{ :lang=>'en' }
  %head
    %meta{ :charset=>'UTF-8' }
    - if page.output_path.index('/news/') == 0
      %title Netty.news: #{page.title}
    - if page.output_path.index('/wiki/') == 0
      %title Netty.docs: #{page.title}
    - else
      %title Netty: #{page.title}
    %meta{ :name=>'viewport', :content=>'width=device-width, initial-scale=1.0' }
    %link{ :rel=>'shortcut icon', :href=>"#{page.site_url}/images/favicon.ico" }
    %link{ :rel=>'alternate', :type=>'application/rss+xml', :title=>'News Feed', :href=>'http://feeds.feedburner.com/netty_project' }
    :css
      body {
        padding-top: 60px;
      }
    %link{ :rel=>'stylesheet', :type=>'text/css', :href=>'http://netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css', :media=>'screen'  }
    %link{ :rel=>'stylesheet', :type=>'text/css', :href=>'http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css', :media=>'screen'  }

    -# SyntaxHighlighter
    %script{ :type=>'text/javascript', :src=>"#{page.site_url}/lib/sh/scripts/shCore.js" }
    %script{ :type=>'text/javascript', :src=>"#{page.site_url}/lib/sh/scripts/shBrushXml.js" }
    %link{ :rel=>'stylesheet', :type=>'text/css', :href=>"#{page.site_url}/lib/sh/styles/shCore.css" }
    %link{ :rel=>'stylesheet', :type=>'text/css', :href=>"#{page.site_url}/lib/sh/styles/shThemeDefault.css" }

    -# Site-specific stuff
    %link{ :rel=>'stylesheet', :type=>'text/css', :href=>"#{page.site_url}/lib/common.css" }
    %script{ :type=>'text/javascript', :src=>"#{page.site_url}/lib/common.js" }

    /[if lt IE 9]
      %script{ :type=>'text/javascript', :src=>'http://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7/html5shiv.js' }
      %script{ :type=>'text/javascript', :src=>'http://cdnjs.cloudflare.com/ajax/libs/respond.js/1.3.0/respond.js' }
  %body
    %a#top.sr-only{ :href=>'#content' } Skip navigation
    %nav#header.navbar.navbar-default.navbar-fixed-top{ :role=>'navigation' }
      .container
        .navbar-header
          %button.navbar-toggle{ :type=>'button', :data=>{ :toggle=>'collapse', :target=>'.navbar-collapse' } }
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{ :href=>"#{page.site_url}/index.html" } 
            %span.navbar-brand-logo
            Netty project
        .navbar-collapse.collapse
          %ul.nav.navbar-nav
            %li{ :class=>'dropdown' }
              %a{ :href=>"#{page.site_url}#{site.posts[0].url}" }
                News
              %ul{ :class=>'dropdown-menu' }
                %li
                  %a{ :href=>"#{page.site_url}/news/index.html" }
                    %i{ :class=>'fa fa-archive' }
                    Archive
            %li{ :class=>'dropdown' }
              %a{ :href=>"#{page.site_url}/downloads.html" }
                Downloads
              %ul{ :class=>'dropdown-menu' }
                - for r in site.releases
                  %li
                    %a{ :href=>"http://dl.bintray.com/netty/downloads/#{r.filename}" }
                      %i{ :class=>'fa fa-cloud-download' }
                      #{r.version}
                      %small &dash; #{r.date}
                %li
                  %a{ :href=>'http://www.tldrlegal.com/l/APACHE2' }
                    %i{ :class=>'fa fa-gavel' }
                    Apache License 2.0
                %li
                  %a{ :href=>'https://bintray.com/netty/downloads/netty/' }
                    %i{ :class=>'fa fa-archive' }
                    Previous Releases
                %li
                  %a{ :href=>'https://secure.motd.kr/jenkins/view/Netty/' }
                    %i{ :class=>'fa fa-flask' }
                    Nightly Builds
            %li{ :class=>'dropdown' }
              %a{ :href=>"#{page.site_url}/wiki/index.html" }
                Documentation
              %ul{ :class=>'dropdown-menu' }
                %li
                  %a{ :href=>"#{page.site_url}/wiki/user-guide.html" }
                    %i{ :class=>'fa fa-book' }
                    User guide
                - for r in site.releases
                  %li
                    %a{ :href=>"#{page.site_url}/#{r.simple_version}/api/index.html" }
                      %i{ :class=>'fa fa-file-text' }
                      Javadoc - #{r.simple_version}
                %li
                  %a{ :href=>"#{page.site_url}/wiki/all-documents.html" }
                    %i{ :class=>'fa fa-list' }
                    All Documents
                %li
                  %a{ :href=>"#{page.site_url}/wiki/related-articles.html" }
                    %i{ :class=>'fa fa-bookmark' }
                    Related Articles
                %li
                  %a{ :href=>"#{page.site_url}/wiki/related-projects.html" }
                    %i{ :class=>'fa fa-bookmark' }
                    Related Projects
                %li#bookpromo-dropdown
                  %a{ :href=>'http://www.manning.com/maurer/' }
                    %img{ :src=>"#{page.site_url}/images/netty-in-action.gif" }
                    %br
                    %small
                      Use code <strong>mlnettyco</strong>
                      %br
                      for a 37% discount!
            %li{ :class=>'dropdown' }
              %a{ :href=>"#{page.site_url}/community.html" }
                Get Involved
              %ul{ :class=>'dropdown-menu' }
                %li
                  %a{ :href=>'https://github.com/netty/netty' }
                    %i{ :class=>'fa fa-github-square' }
                    Github
                %li
                  %a{ :href=>'http://stackoverflow.com/questions/tagged/netty' }
                    %i{ :class=>'fa fa-stack-overflow' }
                    StackOverflow
                %li
                  %a{ :href=>'https://twitter.com/netty_project' }
                    %i{ :class=>'fa fa-twitter-square' }
                    @netty_project
                %li
                  %a{ :href=>"#{page.site_url}/wiki/developer-guide.html" }
                    %i{ :class=>'fa fa-cogs' }
                    Developer Guide
                %li
                  %a{ :href=>"http://webchat.freenode.net/?channels=%23netty&uio=MT1mYWxzZSY5PXRydWU13" }
                    %i{ :class=>'fa fa-comment' }
                    IRC Chat
            %li#bookpromo-nav
              %a{ :href=>'http://www.manning.com/maurer/' }
                %img{ :src=>"#{page.site_url}/images/netty-in-action.gif" }
                %br
                %small
                  Use code <strong>mlnettyco</strong>
                  %br
                  for a 37% discount!
            %li
              %a{ :href=>'http://feeds.feedburner.com/netty_project' }
                %i{ :class=>'fa fa-rss' }
          %form.navbar-form.navbar-right{ :role=>'search', :method=>'GET', :action=>"#{page.site_url}/search.html", :onsubmit=>'return validateGlobalSearchQuery()' }
            .form-group
              %input#global-search-query.search-query.form-control{ :type=>'text', :name=>'q', :placeholder=>'Search' }
    #content
      ~ content
    .container
      %hr
      %footer#footer
        %p 
          Copyright &copy; #{Date.today.year} 
          %a{ :href=>"#{page.site_url}/index.html"} The Netty project
    %script{ :type=>'text/javascript', :src=>'http://cdnjs.cloudflare.com/ajax/libs/jquery/2.0.3/jquery.min.js' }
    %script{ :type=>'text/javascript', :src=>'http://netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js' }
    %script{ :type=>'text/javascript', :src=>"#{page.site_url}/lib/common.footer.js" }

